global
        log 127.0.0.1   local0
        log 127.0.0.1   local1 notice
        #log loghost    local0 info
        maxconn 1024
        #chroot /usr/share/haproxy
        user haproxy
        group haproxy
        daemon
        pidfile /var/run/haproxy.pid

defaults
        log     global
        mode    http
        stats 	enable
        option  tcplog
        option	httplog
        option	dontlognull
        option	dontlog-normal
        retries 3
        option redispatch
        maxconn 1024
        contimeout	4000
        srvtimeout      30000
        clitimeout	60000

listen galera_cluster 0.0.0.0:3306
        mode tcp
        balance roundrobin
        option tcpka
        option mysql-check user haproxy_check
        server <%=@hst_gal_m%> <%=@ip_gal_m%>:3306 check weight 1
        server <%=@hst_gal_1%> <%=@ip_gal_1%>:3306 check weight 1
        server <%=@hst_gal_2%> <%=@ip_gal_2%>:3306 check weight 1
        server <%=@hst_gal_3%> <%=@ip_gal_3%>:3306 check weight 1
        server <%=@hst_gal_4%> <%=@ip_gal_4%>:3306 check weight 1
        
listen stats :8080
    stats uri /
    stats realm Strictly\ Private
    stats auth haproxy:password
    mode http
